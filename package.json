{
	"name": "backend",
	"version": "1.0.0",
	"description": "Rikuya-Thing-Backend is a backend application built with [Fastify](https://www.fastify.io/) and TypeScript. This project is designed to provide a modular and scalable structure.",
	"main": "index.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "npx nodemon",
		"start": "node dist/index.js",
		"test": "jest --detectOpenHandles",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"db:studio": "drizzle-kit studio --port=5555",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push"
	},
	"keywords": [],
	"author": "CookyNdi",
	"license": "ISC",
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"@fastify/helmet": "^13.0.1",
		"@fastify/one-line-logger": "^2.0.2",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@tsconfig/node16": "^16.1.4",
		"@types/node": "^24.0.13",
		"@types/pg": "^8.15.4",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.31.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	}
}